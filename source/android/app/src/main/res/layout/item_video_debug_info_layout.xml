<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/debug_show_or_hide_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_corners_4_background_7f555555"
            android:padding="4dp"
            android:text="@string/play_show_or_hide"
            android:textColor="#00FF00"
            android:textSize="13dp" />

        <LinearLayout
            android:id="@+id/debug_content_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/debug_show_or_hide_btn"
            android:background="@drawable/item_corners_4_background_7f555555"
            android:visibility="visible">

            <TextView
                android:id="@+id/player_debug_info_name_view"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:padding="5dp"
                android:scrollbars="none"
                android:textColor="#00FF00"
                android:textSize="13dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/player_debug_info_value_view"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:padding="5dp"
                android:scrollbars="vertical"
                android:textColor="#00FF00"
                android:textSize="13dp"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>